<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="Theme.News" parent="Theme.Material3.DayNight.NoActionBar">
        <item name="colorPrimary">@color/blue_500</item>
        <item name="colorAccent">@color/blue_800</item>
        <item name="colorPrimaryDark">@color/blue_700</item>
        <item name="colorOnPrimary">@color/black_800</item>
        <item name="colorOnSecondary">@color/black_500</item>

        <item name="android:windowTranslucentNavigation">false</item>
        <item name="android:navigationBarColor">@color/blue_700</item>
    </style>

    <style name="Theme.News.Auth" parent="Theme.Material3.DayNight.NoActionBar">
        <item name="colorPrimary">@color/blue_500</item>
        <item name="colorAccent">@color/white</item>
        <item name="colorPrimaryDark">@color/blue_500</item>
        <item name="colorOnPrimary">@color/black_800</item>
        <item name="colorOnSecondary">@color/black_500</item>

        <item name="android:windowTranslucentNavigation">false</item>
        <item name="android:navigationBarColor">@color/blue_700</item>
    </style>

    <style name="Theme.News.Profile" parent="Theme.Material3.DayNight.NoActionBar">
        <item name="colorPrimary">@color/blue_700</item>
        <item name="colorAccent">@color/blue_800</item>
        <item name="colorPrimaryDark">@color/blue_700</item>

        <item name="android:windowTranslucentNavigation">false</item>
        <item name="android:navigationBarColor">@color/blue_700</item>
    </style>

    <style name="Theme.News.Launcher">
        <item name="android:windowBackground">@drawable/auth_background</item>
        <item name="colorPrimary">@color/blue_500</item>
        <item name="colorAccent">@color/blue_800</item>
        <item name="colorPrimaryDark">@color/blue_700</item>
    </style>

    <style name="ThemeOverlay.App.TextInputLayout" parent="">
        <item name="colorOnSurface">@color/white</item>
        <item name="colorError">@color/pink_500</item>
        <item name="colorPrimary">@color/white</item>
        <item name="boxStrokeColor">@color/white</item>
        <item name="boxStrokeErrorColor">@color/pink_500</item>
        <item name="boxStrokeWidthFocused">1dp</item>
        <item name="boxCornerRadiusBottomEnd">24dp</item>
        <item name="boxCornerRadiusTopEnd">24dp</item>
        <item name="boxCornerRadiusBottomStart">24dp</item>
        <item name="boxCornerRadiusTopStart">24dp</item>
        <item name="editTextStyle">@style/Widget.MaterialComponents.TextInputEditText.OutlinedBox
        </item>
    </style>

    <style name="Theme.News.AuthEditText" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox">
        <item name="materialThemeOverlay">@style/ThemeOverlay.App.TextInputLayout</item>
        <item name="hintTextColor">@color/white</item>
    </style>

    <style name="ThemeOverlay.App.TextInputLayout.Profile" parent="">
        <item name="colorOnSurface">@color/black_800</item>
        <item name="colorError">@color/red_500</item>
        <item name="colorPrimary">@color/black_800</item>
        <item name="boxStrokeColor">@color/black_800</item>
        <item name="boxStrokeErrorColor">@color/red_500</item>
        <item name="boxStrokeWidthFocused">1dp</item>
        <item name="boxCornerRadiusBottomEnd">4dp</item>
        <item name="boxCornerRadiusTopEnd">4dp</item>
        <item name="boxCornerRadiusBottomStart">4dp</item>
        <item name="boxCornerRadiusTopStart">4dp</item>
        <item name="editTextStyle">@style/Widget.MaterialComponents.TextInputEditText.OutlinedBox
        </item>
    </style>

    <style name="Theme.News.Profile.Field" parent="Widget.MaterialComponents.TextInputLayout.FilledBox">
        <item name="materialThemeOverlay">@style/ThemeOverlay.App.TextInputLayout.Profile</item>
        <item name="android:background">@drawable/profile_info_field</item>
        <item name="android:textColor">@color/black_800</item>
        <item name="hintTextColor">@color/black_800</item>
    </style>

    <!--    Alert Dialog styles-->
    <style name="Dialog" parent="Theme.MaterialComponents.DayNight.Dialog.Alert">
        <item name="android:textColorPrimary">@color/black_800</item>
        <item name="buttonBarPositiveButtonStyle">@style/DialogPositiveButton</item>
        <item name="buttonBarNegativeButtonStyle">@style/DialogNegativeButton</item>
        <item name="buttonBarNeutralButtonStyle">@style/DialogNeutralButton</item>
        <item name="android:windowBackground">@drawable/news_recycler_card</item>
        <item name="android:textSize">16sp</item>
    </style>

    <style name="DialogButton" parent="Widget.MaterialComponents.Button.TextButton.Dialog">
        <item name="android:textColor">@color/blue_800</item>
        <item name="android:textSize">24sp</item>
        <item name="android:textAllCaps">true</item>
    </style>

    <style name="DialogPositiveButton" parent="DialogButton"/>
    <style name="DialogNegativeButton" parent="DialogButton"/>
    <style name="DialogNeutralButton" parent="DialogButton"/>

</resources>