<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="toolbar">
        <item name="android:textColor">@color/white</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">20sp</item>
        <item name="subtitleTextColor">@color/light_gray_500</item>
    </style>

    <style name="news_header">
        <item name="android:textSize">16sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">?attr/colorOnPrimary</item>
    </style>

    <style name="news_body">
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">?attr/colorOnPrimary</item>
    </style>

    <style name="news_date">
        <item name="android:textSize">12sp</item>
        <item name="android:textColor">?attr/colorOnSecondary</item>
    </style>

    <style name="news_link">
        <item name="android:textSize">12sp</item>
        <item name="android:textColor">@color/blue_500</item>
    </style>

    <style name="settings_item">
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@color/text_color</item>
    </style>

    <style name="toolbar_search">
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="button_default" parent="Widget.Material3.Button">
        <item name="backgroundTint">@color/white</item>
        <item name="android:textSize">16sp</item>
        <item name="android:background">@drawable/auth_field_border</item>
        <item name="fontFamily">sans-serif-regular</item>
        <item name="android:textAllCaps">true</item>
        <item name="android:textColor">?attr/colorPrimaryDark</item>
    </style>

    <style name="button_profile_exit" parent="Widget.Material3.Button">
        <item name="backgroundTint">@color/card_color</item>
        <item name="android:textSize">16sp</item>
        <item name="android:background">@drawable/profile_button_border</item>
        <item name="fontFamily">sans-serif-medium</item>
        <item name="android:textAllCaps">true</item>
        <item name="android:textColor">@color/text_exit</item>
    </style>

    <style name="button_profile" parent="Widget.Material3.Button">
        <item name="backgroundTint">@color/card_color</item>
        <item name="android:textSize">16sp</item>
        <item name="android:background">@drawable/profile_button_border</item>
        <item name="fontFamily">sans-serif-medium</item>
        <item name="android:textAllCaps">true</item>
        <item name="android:textColor">@color/text_color</item>
    </style>

    <style name="button_settings" parent="Widget.Material3.Button">
        <item name="backgroundTint">@color/white</item>
        <item name="android:textSize">16sp</item>
        <item name="android:background">@drawable/settings_button_border</item>
        <item name="fontFamily">sans-serif-medium</item>
        <item name="android:textAllCaps">true</item>
        <item name="android:textColor">?attr/colorOnSecondary</item>
    </style>

    <style name="auth_header">
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">20sp</item>
    </style>
</resources>